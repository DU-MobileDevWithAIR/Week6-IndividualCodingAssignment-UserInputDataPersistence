<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark" >

    <fx:Script>
        <![CDATA[
        import edu.du.mobile.model.AppModel;
        import mx.events.FlexEvent;
        [Bindable]
        private var _appModel:AppModel = AppModel.getInstance();

        private function _deleteDB(dataDelete) {
            _appModel.manageFiles(dataDelete)
        }

        ]]>
    </fx:Script>
    <s:states>
        <s:State name="isNotFavorite"/>
        <s:State name="isFavorite"/>
    </s:states>
    <s:Scroller top="20" left="20" right="20"
        height="100%">

        <s:VGroup >
            <s:Label text="Back to Login or Register" click="navigator.pushView(LoginOrRegisterView)" />
            <s:Label id="delUsers" click="_deleteDB('users')" text="Delete User Data" />
            <s:Label id="delFavs" click="_deleteDB('favs')" text="Delete Favs Data" />
        </s:VGroup>

    </s:Scroller>
</s:View>