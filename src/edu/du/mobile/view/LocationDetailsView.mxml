<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx"
    creationComplete="_onCreationComplete( event )">

    <fx:Script>
        <![CDATA[
        import edu.du.mobile.model.AppModel;
        import edu.du.mobile.model.vo.Venue;

        import mx.events.FlexEvent;
        import mx.formatters.PhoneFormatter;

        import mx.utils.ObjectUtil;
        import mx.events.ValidationResultEvent;

        private var vResult:ValidationResultEvent;

        [Bindable]
        private var _appModel:AppModel = AppModel.getInstance();
        [Bindable]
        private var _venue:Venue;

        private function _onCreationComplete(event:FlexEvent):void {
            trace(ObjectUtil.toString(_appModel.selectedVenue));

            _venue = _appModel.selectedVenue;
            _formatPhone();
        }
        // Event handler to validate and format input.
        private function _formatPhone():void {

            vResult = phoneNumberValid.validate();
            trace(vResult);
            if (vResult.type == ValidationResultEvent.INVALID) {
                trace('before'+phone.text);
                phone.text = phoneFormatter.format(phone.text);
                trace('asfter'+phoneFormatter.error);
            } else {
                trace('invaleid');
                phone.text = "N/A";
            }
        }
        ]]>
    </fx:Script>
    <fx:Declarations>
        <mx:PhoneFormatter id="phoneFormatter" areaCodeFormat="(###)" formatString="(###) ###-####" validPatternChars="#-() "/>

        <mx:PhoneNumberValidator id="phoneNumberValid" source="{phone}" property="text"/>
    </fx:Declarations>
    <s:Scroller top="20" left="20" right="20"
        height="100%">

        <s:VGroup >

            <s:Label text="{ _venue.name }"
                     width="80%"/>

            <s:HGroup>
                <s:Label text="Map"
                   color="blue"
                   paddingLeft="25"/>

                <s:Label text="Share"
                   color="blue"
                   paddingLeft="70"/>
            </s:HGroup>

            <s:Image id="locationImage"
               height="300"
               width="100%"
               backgroundColor="#000000"/>


            <!-- TODO: Use a PhoneFormatter to guarantee the phone is a specific format: http://flex.apache.org/asdoc/mx/formatters/PhoneFormatter.html -->
            <s:Label text="Phone"
               color="blue"/>
            <s:Label text="{ _venue.contactPhone }"
                     id="phone"/>

            <s:Label text="Website"
               color="blue"/>
            <s:Label text="N/A"/>

            <s:Label text="Address"
               color="blue"/>
            <s:Label text="{ _venue.addressLine1 }"/>
            <s:Label text="{ _venue.addressLine2 }"/>

            <s:HGroup width="100%">
                <s:Label text="Directions to Here"
                    color="blue"/>
                <s:Spacer width="100%"/>
                <s:Label text="Directions from Here"
                    color="blue"/>
            </s:HGroup>

        </s:VGroup>

    </s:Scroller>
</s:View>